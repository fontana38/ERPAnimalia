<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Producto</title>
   
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/gijgo.js"></script>
    
</head>
<body>
    <script type="text/javascript">
        var gridProduct;

        $(document).ready(function () {

             gridProduct = $("#gridProduct").grid({
                dataKey: "IdProducto",
                uiLibrary: "bootstrap",
                columns: [
                { field: "IdProducto", hidden: true },
                { field: "Codigo", title: "Código", sortable: true, width: 80 },
                { field: "Marca", title: "Marca", sortable: true, width: 80 },
                { field: "Descripcion1", title: "Descripcion 1", sortable: true, width: 120 },
                { field: "Descripcion2", title: "Descripcion 2", sortable: true, width: 120 },
                { field: "SubCategoryName", title: "SubCategoria", sortable: true, width: 100 },
                { field:"CategoryName", title: "Categoria", sortable: true, width: 100 },
                { field: "kg", title: "Kg", sortable: true, width: 80 },
                { field: "Cantidad", title: "Cantidad", sortable: true, width: 80 },
                { field: "PrecioCosto", title: "Precio Costo", sortable: true, width: 80 },
                { field: "PrecioVenta", title: "Precio Venta", sortable: true, width: 80 },
                { field: "RentabilidadPesos", title: "Renabilidad $", sortable: true, width: 80 },
                { field: "Rentabilidad", title: "Renabilidad %", sortable: true, width: 80 },
                {
                    width: 90, tmpl: '<a href="#">Edit</a>', align: 'center', events: {
                        'click': function (e) {
                            id = e.data.record.IdProducto;
                            location.href='@Url.Action("Edit","Product")?ids=' + id;
                        }
                    }
                },
                {
                    width: 90, tmpl: '<a href="#">delete</a>', align: 'center', events: {
                        'click': function (e) {
                            id = e.data.record.IdProducto;
                            location.href = '@Url.Action("Delete","Product")?id=' + id;
                        }
                    }
                }
                ],
                pager: { limit: 5, sizes: [2, 5, 10, 20] }
            });

            $("#btnSearch").on("click", Search);
        });

        @*function Edit(e) {
            debugger;
            $.ajax({
                type: 'Get',
                url:'@Url.Action("Edit","Product")',
                data: {ids: e.data.record.IdProducto },

                success: function (msg) {
                    debugger;
                    // Notice that msg.d is used to retrieve the result object
                    alert(msg.d);
                }
            });


        }*@

        function Search() {
            debugger;
            gridProduct.reload({ searchString: $("#search").val() });
        }

        function Delete(e) {


        }

    </script>


    <div class="panel panel-primary">
        <div class="panel-heading">Producto</div>
        <div class="panel-body">
            <div class="form-group row">
                <div class="col-md-3 col-md-offset-1">
                    <div class="input-group">
                        <input type="text" id="search" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button type="button" id="btnSearch" class="btn btn-default">Go!</button>
                        </span>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Product")'">Agregar Producto</button>
                </div>
            </div>
        </div>
        <br />
        <table id="gridProduct" data-source="@Url.Action("GetProduct")"></table>
    </div>

</body>
</html>
