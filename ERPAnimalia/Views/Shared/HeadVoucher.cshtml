@using ERPAnimalia.Models;

<!DOCTYPE html>

@model ERPAnimalia.Models.VoucherHeadModel
<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.0/moment.min.js"></script>
<script src="http://stevenlevithan.com/assets/misc/date.format.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        debugger;
        $("#NombreCompleto").autocomplete({
         
            source: function (request, response) {
                $.ajax({
                   
                    url: "/Voucher/GetClient",
                    type: "POST", dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        debugger;
                        response($.map(data, function (item) {
                            return { label: item.NombreCompleto, value: item.NombreCompleto };
                        }));
                    }
                });
            },
            messages: { noResults: "", results: "" }
        });
                debugger;
                $('#DateVoucher').datepicker({
                    dateFormat: "dd-mm-yy",
                    firstDay: 1,
                    dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"],
                    dayNamesShort: ["Dom", "Lun", "Mar", "Mie", "Jue", "Vie", "Sab"],
                    monthNames:
                        ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio",
                        "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"],
                    monthNamesShort:
                        ["Ene", "Feb", "Mar", "Abr", "May", "Jun",
                        "Jul", "Ago", "Sep", "Oct", "Nov", "Dic"]
                });
               
                  
    });

    
               
</script>
    <div class="container-fluid">

    <div class="panel panel-primary">
        <div class="panel-heading">Crear Factura</div>
        <div class="panel-body">
            <form action="HeadVoucher" class="form-inline">
                <div class="row">
                    <div class="col-md-4">

                        <label class="control-label col-md-3">Cliente:</label>
                        <div>
                            @Html.EditorFor(model => model.clientModel.First().NombreCompleto, new { htmlAttributes = new { @class = "form-control" } })
                        </div>


                    </div>
                    <div class="col-md-4 col-md-offset-4">
                        <label for="DateVoucher">Fecha Comprobante</label></br>
                        <input size="50" type="text" class="datepicker" data-date-format="mm/dd/yyyy" id="DateVoucher" placeholder="Ingrese Fecha">
                    </div>
                </div>  
            </form>
        </div>

    </div>
</div>
