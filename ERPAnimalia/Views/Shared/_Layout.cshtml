<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Animalias Administración</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/gijgo/combined/gijgo.css")
      @Styles.Render("~/Content/gijgo/combined/gijgo.min.css")
    <script src="~/Scripts/gijgo/combined/gijgo.min.js"></script>
    <script src="~/Scripts/gijgo/combined/gijgo.js"></script>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/bootstrap-theme.min.css")
    @Styles.Render("~/Content/bootstrap-datepicker.css")
    @Styles.Render("~/Content/bootstrap-datepicker.min.css")
    @Styles.Render("~/Content/jquery-ui.css")

    <script src="~/Scripts/jquery-3.2.1.min.js"></script>

    <script src="~/Scripts/client.js"></script>
   
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/bootstrap3.3.7.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/date.format.js"></script>
    
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">WebSiteName</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Ventas <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Producto","Index", "ListProduct")</li>
                       
                        <li>@Html.ActionLink("Cliente","Index", "Cliente")</li>
                        <li>@Html.ActionLink("Pasar a suelto", "Suelto", "Producto")</li>
                        <li>@Html.ActionLink("Factura", "CrearFactura", "Factura")</li>
                       

                    </ul>
                </li>
                <li>
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Compras <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Proveedor", "Index", "Provider")</li>
                        <li>@Html.ActionLink("Nota de Pedido", "Index", "LoadOrder")</li>                 
                    </ul>
                </li>
                <li class="active">@Html.ActionLink("Lista de Productos", "ListaPrecio", "Producto")</li>
               
            </ul>
           
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

</body>
</html>
